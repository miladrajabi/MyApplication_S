<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Episodes.SQLiteEditActivity"></activity>
        <activity
            android:name=".Episodes.SQliteUpdateActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".Episodes.SQLiteInsertActivity" />
        <activity android:name=".Episodes.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Episodes.CustomSharedPreferencesActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Episodes.SharedPrefencesActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".Episodes.PermissionSampleActivity" />
        <activity
            android:name=".Episodes.FragmentActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".Episodes.ActionBarActivity" />
        <activity android:name=".Episodes.TabWidgetActivity" />
        <activity android:name=".Episodes.RecyclerViewActivity" />
        <activity android:name=".Episodes.CustomListViewActivity" />
        <activity android:name=".Episodes.MainActivity" />
    </application>

</manifest>